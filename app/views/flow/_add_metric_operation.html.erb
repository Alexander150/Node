<div class="add-metric-container" id="add_metric_operation_{{e.id}}">
	<div style="text-align: right; height: auto; width: 100%;">
		<i style="right: 2px; top: 2px;" ng-click="closeAddMetricOperation(e);" class="fal fa-times">X</i>
	</div>
	<div style="text-align: center; height: auto; width: 100%;">
		<select id="desired-metric-{{e.id}}" class="metric-creation-input" name="metric_name">
			<% Metric.all.each do |metric|%>
				<option value="<%= metric.name %>">
					<%= metric.name %>
				</option>
			<% end %>
		</select>
		<input id="desired-metric-operation-value-{{e.id}}" class="metric-creation-input" name="metric_metric_operation_value" placeholder="Значение операции">
		<input id="desired-metric-operation-name-{{e.id}}" class="metric-creation-input" name="metric_metric_operation_name" placeholder="Название операции">
		<button ng-click="sendAddNodeDataOperation(e);">
			СОЗДАТЬ
		</button>
	</div>
</div>