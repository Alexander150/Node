<div class="admin_body2" ng-controller="AdminBoardCtrl" ng-init="init();">
	<table align="left" class="table" border="1px">
		<caption align="center" style="font-size: 1.5vw;">Параметры</caption>
		<tr>
			<th>Название</th>
			<th>Тип</th>
			<th>Единицы измерения</th>
			<th>Минимум</th>
			<th>Максимум</th>
			<th>По умолчанию(берутся значения из базы)</th>
		</tr>
		<% @metrics.each do |metric| %>

			<% metric_value = @metric_values.find_by metrics_id: metric.id %>
			<tr>
				<td>
					<%= metric.name %>
				</td>
				<td>
					<select>
						<% DataType.all.each do |data_type|%>
							<option><%= data_type.name %></option>
						<% end %>
					</select>
				</td>
				<td>
					<select>
						<% Measure.all.each do |measure| %>
							<option><%= measure.name %></option>
						<% end %>
					</select>
				</td>
				<td>
					<%= metric_value.min_value %>
				</td>
				<td>
					<%= metric_value.max_value %>
				</td>
			</tr>
		<% end %>
		<tr>
			<td class="add-metric" colspan="5" ng-click="createMetric();">
				Добавить
			</td>
		</tr>
	</table>
	<%= render "/flow/new_metric" %>
</div>