<div class="new-node-container" id="node_creation_{{e.id}}">
	<i class="fal fa-times">X</i>
	<input ng-model="dataNode.name" class="node-creation-input" name="node_name" placeholder="Название нода" />
	<input ng-model="dataNode.body" class="node-creation-input" name="node_body" placeholder="Тело нода" />
	<!-- <select ng-model="dataNode.metric_value" class="node-creation-input" name="node_metric_value" placeholder="Введите значение метрики">
		
	</select> -->
	<select ng-model="dataMetricValue.metric" placeholder="Выберите метрику">
		<option style="color: white;">Выберите метрику</option>
		<% @metrics.each do |metric|%>
			<option style="color: white;"><%= metric.name %></option>
		<% end %>
	</select>
	<input ng-model="dataMetricValue.value" class="node-creation-input" name="node_metric_value_value" placeholder="Значение метрики">
	<input type="checkbox" ng-model="dataNode.last_node" class="node-creation-input" name="node_last_node" />
	<button ng-click="sendNewNodeData(e);">СОЗДАТЬ</button>
</div>